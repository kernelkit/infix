             }
             break;
+        case 'z':
+		if (operation) {
+			error_print(0, "Operation already specified");
+			goto cleanup;
+		}
+		/* init-data */
+		operation = 'z';
+		data_path = optarg;
+		break;
         case 'I':
             /* init-data */
             if (operation == 'i') {
@@ -922,9 +932,15 @@ main(int argc, char **argv)
